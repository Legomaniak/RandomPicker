<Window x:Class="RandomPicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomPicker"
        mc:Ignorable="d"
        Title="RandomPicker" Height="350" Width="525" ResizeMode="CanResizeWithGrip">
    <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="306*"/>
                <RowDefinition Height="13*" x:Name="myRow"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" x:Name="myColumn"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="button" Content="Settings" VerticalAlignment="Top" Click="button_Click"/>
            <local:ShowTyp x:Name="showTyp" Margin="0,20,0,30.843"/>
            <Button x:Name="button1" Content="Play" VerticalAlignment="Bottom" Click="button1_Click" Grid.RowSpan="2"/>
            <local:MyLabel x:Name="text" Grid.Column="1" Grid.Row="1" />
            <local:MyImage x:Name="image" Grid.Column="1"/>

    </Grid>
</Window>
